rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Live trips collection you write to
    match /trips_live/{tripId} {
      // Anyone can read (search feed)
      allow read: if true;

      // Create if signed-in AND the posted driverId matches the caller's uid
      allow create: if request.auth != null
                    && request.resource.data.driverId == request.auth.uid;

      // Update/Delete only by the owner
      allow update, delete: if request.auth != null
                            && resource.data.driverId == request.auth.uid;
    }

    // (Optional) Everything else read-only
    match /{document=**} {
      allow read: if true;
    }
  }
}
